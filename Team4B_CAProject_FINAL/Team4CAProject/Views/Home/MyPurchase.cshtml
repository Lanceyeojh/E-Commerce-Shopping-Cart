@model Cart
@{
    Layout = "_IndexLayout";
    ViewData["Title"] = "MyPurchases";
}

<div id="purchased" class="container">
    <div class="row col-md-10 col-md-offset-1 custyle">
        <table class="table table-striped custab">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Time</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @{
                foreach (CartItem cartItem in Model.CartItems)
                {
    
                    <tr>
                        <td><img src="~/images/@cartItem.Product.Image" class="img-responsive"></td>
                        <td>@cartItem.Product.Name</td>
                        <td>@cartItem.Product.Desc</td>
                        <td>@cartItem.Quantity</td>
                        <td>@cartItem.Product.UnitPrice</td>
                        <td>@cartItem.CheckoutTime</td>
                        <td>
                            <select class="browser-default custom-select">
                                @{
                                    foreach (var code in cartItem.ActivationCodes)
                                    {
                                        <option>@code.ActivationCode</option>
                                    }
                                }
                            </select>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    
</div>